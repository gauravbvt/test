<?xml version="1.0" encoding="UTF-8"?>
<guide xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="guide.xsd">
    <name>Guide</name>
    <description>Select a group of activities and then an activity within that group.</description>
    <group id="scoping">
        <name>Scoping</name>
        <activity id="events">
            <name>Events in scope</name>
            <step>
                <description>Name '''events in scope''' and identify those that are ''incidents''.

See [http://localhost:8081/channels/doc/channels_user_guide/ch01s05.html more] about scoping.
            </description>
                <script>
                    <action>See all events in scope</action>
                    <change>
                        <subjectPath>plan</subjectPath>
                        <type>Expanded</type>
                        <property>All events</property>
                    </change>
                </script>
            </step>
            <next group="profiling" activity="profiling-organization"/>
        </activity>
        <activity id="organizations">
            <name>Organizations in scope</name>
            <step>
                <description>Name the '''organizations''' in scope.</description>
                <script>
                    <action>See all participating organzations</action>
                    <change>
                        <subjectPath>plan</subjectPath>
                        <type>Expanded</type>
                        <property>All organizations</property>
                    </change>
                </script>
            </step>
        </activity>
    </group>
    <group id="profiling">
        <name>Profiling</name>
        <activity id="profiling-agent">
            <name>Profiling an agent</name>
            <step>
                <description>Define the '''profile''' of an agent</description>
                <script>
                    <action>Open the index</action>
                    <change>
                        <subjectPath>plan</subjectPath>
                        <type>Expanded</type>
                        <property>Index</property>
                    </change>
                </script>
            </step>
            <step>
                <description>Setting organizations in scope</description>
                <script>
                    <action>See all participating organizations</action>
                    <change>
                        <subjectPath>plan</subjectPath>
                        <type>Expanded</type>
                        <property>All organizations</property>
                    </change>
                </script>
            </step>
            <next group="profiling" activity="profiling-organization"/>
        </activity>
        <activity id="profiling-organization">
            <name>Profiling an organization</name>
            <step>
                <description>Define the '''profile''' of an organization.</description>
                <script>
                    <action>Open the index</action>
                    <change>
                        <updateTargetPath>planPage</updateTargetPath>
                        <subjectPath>plan</subjectPath>
                        <type>Expanded</type>
                        <property>Index</property>
                    </change>
                </script>
            </step>
        </activity>
    </group>

</guide>
