<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>

    <bean id="serializer" class="com.mindalliance.channels.export.xml.XmlStreamer"/>
    <bean id="attachmentManager" class="com.mindalliance.channels.attachments.FileBasedManager">
        <property name="directory" value="target/channels-1.0-SNAPSHOT/uploads"/>
        <property name="path" value="uploads"/>
    </bean>
    <bean id="graphBuilder" class="com.mindalliance.channels.graph.DefaultGraphBuilder"/>

    <bean id="channels" class="com.mindalliance.channels.service.ChannelsServiceImpl">
        <property name="addingSamples" value="true"/>
        <property name="media">
            <list value-type="java.util.ArrayList">
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Phone"/>
                    <property name="addressPattern" value="\d{3}-\d{3}-\d{4}"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Fax"/>
                    <property name="addressPattern" value="\d{3}-\d{3}-\d{4}"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Cell"/>
                    <property name="addressPattern" value="\d{3}-\d{3}-\d{4}"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Email"/>
                    <property name="addressPattern" value="[^@\s]+@[^@\s]+\.\w+"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="IM"/>
                    <property name="addressPattern" value=".+"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Radio"/>
                    <property name="addressPattern" value=".+"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Television"/>
                    <property name="addressPattern" value=".+"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Courier"/>
                    <property name="addressPattern" value=".+"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                    <property name="name" value="Face to face"/>
                    <property name="addressPattern" value=".*"/>
                </bean>
                <bean class="com.mindalliance.channels.Medium">
                     <property name="name" value="SendWordNow"/>
                     <property name="addressPattern" value=".+"/>
                 </bean>
                <bean class="com.mindalliance.channels.Medium">
                     <property name="name" value="Other"/>
                     <property name="addressPattern" value=".+"/>
                 </bean>
            </list>
        </property>
        <property name="dao" ref="dao"/>
    </bean>

    <!-- setup wicket application -->
    <bean id="wicketApplication" class="com.mindalliance.channels.pages.Project">
        <property name="uri" value="mindalliance.com/channels/demo"/>
        <property name="service" ref="channels"/>
        <property name="graphBuilder" ref="graphBuilder"/>
        <property name="flowDiagram" ref="flowDiagram"/>
        <property name="attachmentManager" ref="attachmentManager"/>
        <property name="importer" ref="serializer"/>
        <property name="exporter" ref="serializer"/>
        <property name="analyst" ref="analyst"/>
    </bean>

    <!-- Flow diagram -->
    <bean id="flowDiagram" class="com.mindalliance.channels.graph.DefaultFlowDiagram">
        <property name="graphRenderer" ref="graphRenderer"/>
        <property name="urlFormat" value="?scenario={0}&amp;node={1}"/>
        <property name="scenarioUrlFormat" value="?scenario={0}"/>
        <property name="imageDirectory" value="src/site/resources/images"/>
    </bean>

    <bean id="graphRenderer" class="com.mindalliance.channels.graph.GraphvizRenderer">
        <property name="dotPath" value="/usr/bin"/>
        <property name="algo" value="dot"/>
        <property name="timeout" value="10000"/>
    </bean>

    <!-- Scenario analyst -->
    <bean id="analyst" class="com.mindalliance.channels.analysis.DefaultAnalyst">
        <property name="issueDetectors">
            <list value-type="java.util.ArrayList">
                <bean class="com.mindalliance.channels.analysis.detectors.FromUser"/>
                <bean class="com.mindalliance.channels.analysis.detectors.PartWithoutTask"/>
                <bean class="com.mindalliance.channels.analysis.detectors.PartWithoutRole"/>
                <bean class="com.mindalliance.channels.analysis.detectors.FlowWithoutChannel"/>
                <bean class="com.mindalliance.channels.analysis.detectors.UnnamedFlow"/>
                <bean class="com.mindalliance.channels.analysis.detectors.FlowWithUndefinedSource"/>
                <bean class="com.mindalliance.channels.analysis.detectors.FlowWithUndefinedTarget"/>
                <bean class="com.mindalliance.channels.analysis.detectors.OrphanedPart"/>
                <bean class="com.mindalliance.channels.analysis.detectors.UnconnectedConnector"/>
                <bean class="com.mindalliance.channels.analysis.detectors.FlowViolatesPolicy"/>
                <bean class="com.mindalliance.channels.analysis.detectors.NoRedundancy"/>
                <bean class="com.mindalliance.channels.analysis.detectors.PotentialDeadlock"/>
            </list>
        </property>
    </bean>

    <!-- Security -->
    <bean id="filterChainProxy" class="org.acegisecurity.util.FilterChainProxy">
        <property name="filterInvocationDefinitionSource">
            <value>
                CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
                PATTERN_TYPE_APACHE_ANT
                /**=httpSessionContextIntegrationFilter,logoutFilter,basicFilter,exceptionFilter,securityInterceptor
            </value>
        </property>
     </bean>

    <!-- Maintains security context between requests (using the session). -->
    <bean id="httpSessionContextIntegrationFilter"
          class="org.acegisecurity.context.HttpSessionContextIntegrationFilter">
        <property name="forceEagerSessionCreation" value="true"/>
    </bean>

    <bean id="logoutFilter" class="org.acegisecurity.ui.logout.LogoutFilter">
        <constructor-arg value="/"/>
        <constructor-arg><list>
            <bean class="org.acegisecurity.ui.logout.SecurityContextLogoutHandler"/>
        </list></constructor-arg>
        <property name="filterProcessesUrl" value="/logout"/>
    </bean>

    <bean id="basicFilter" class="org.acegisecurity.ui.basicauth.BasicProcessingFilter">
        <property name="authenticationManager" ref="authenticationManager"/>
        <property name="authenticationEntryPoint" ref="basicFilterEP"/>
    </bean>

    <bean id="basicFilterEP" class="org.acegisecurity.ui.basicauth.BasicProcessingFilterEntryPoint">
        <property name="realmName" value="channels"/>
    </bean>

    <bean id="exceptionFilter" class="org.acegisecurity.ui.ExceptionTranslationFilter">
        <property name="authenticationEntryPoint" ref="basicFilterEP"/>
    </bean>

    <bean id="securityInterceptor" class="org.acegisecurity.intercept.web.FilterSecurityInterceptor">
        <property name="authenticationManager" ref="authenticationManager"/>
        <property name="accessDecisionManager">
            <bean class="org.acegisecurity.vote.AffirmativeBased">
                <property name="decisionVoters">
                    <list><bean class="org.acegisecurity.vote.RoleVoter"/></list>
                </property>
            </bean>
        </property>
        <property name="objectDefinitionSource">
          <value>
            CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
            PATTERN_TYPE_APACHE_ANT
            /**=ROLE_USER
          </value>
        </property>
    </bean>

    <bean id="authenticationManager" class="org.acegisecurity.providers.ProviderManager">
        <property name="providers">
            <list>
                <bean class="org.acegisecurity.providers.dao.DaoAuthenticationProvider">
                    <property name="passwordEncoder">
                        <bean class="org.acegisecurity.providers.encoding.Md5PasswordEncoder"/>
                    </property>
                    <property name="userDetailsService">
                        <bean class="org.acegisecurity.userdetails.memory.InMemoryDaoImpl">
                            <property name="userProperties">
                                <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
                                    <property name="location" value="/WEB-INF/users.properties"/>
                                </bean>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
