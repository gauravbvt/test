* {
    margin: 0;
    padding: 0;
}

a {
    color: #333333;
    border-bottom: 1px dotted #666666;
    text-decoration: none;
}

body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 13px;
    color: #333333;
    margin: 0;
    padding: 0;
    text-align: center;
}

div#container {
    width: 1000px;
    margin: 0 auto;
    text-align: left;
    padding: 0; /*border:1px solid #cccccc;*/
    background-color: #f6f6f6;
    border: 1px solid #cccccc;
}


/* ----- Header ----- */

div#header {
    width: 1000px;
    height: 60px;
    background: url('/images/header.png') no-repeat #c3d9ff;
    border-bottom: 1px solid #cccccc;
}

div#header .logo {
    float: left;
    cursor: pointer;
    padding:7px 0 0 7px;
}

div#header .selector img {
    border: 0;
}

div#header h1 {
    display: block;
    float: left;
    width: 770px;
    font-size: medium;
    font-weight: bold;
    padding: 18px 0 0 10px;
	font-size:20px;
}

div#header > ul {
    float: right;
    list-style: none;
    margin: 20px 20px 0 0;
    padding: 0;
    display: inline;
}

div#header > ul li {
    list-style: none;
    margin: 0;
    padding: 0;
    display: inline;
}

div#header > ul li a {
    background: url('/images/signout-bg.png') repeat-x;
    border: 1px solid #a7a9ac;
    color: #727272;
    font-size: 10px;
    font-weight: bold;
    padding: 4px;
    margin-left: 5px;
    text-transform: capitalize;
    outline: none;
}

div#header > ul li a:hover {
    color: #333333;
}


/* ----- Content ----- */

div#contents {
	padding:15px;
	width:970px;
}


/* ----- Content - Note ----- */

div#contents div#note {
    background: url("/images/gains.png") no-repeat 5px 4px #FEF2B0;
    border:1px solid #C5B351;
    color: #000000;
    font-size: 12px;
    font-style: italic;
    margin: 5px 0 15px 0;
    padding: 5px 5px 5px 25px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}


/* ----- Content - Table ----- */

div#contents table {
	border-collapse:collapse;
	margin:0 0 20px 0;
}

div#contents table tr.tablehead {
	background:url("/images/tablehead-bg.png") no-repeat;
	height:67px;
}

div#contents table tr th {
	padding:0 15px;
}

div#contents table tr.tablecont {
	background:url("/images/table-bg.png") no-repeat;
	height:36px;
}

div#contents table tr.tablecont.last {
	background:url("/images/tablebot-bg.png") no-repeat;
	height:36px;
}

div#contents table tr td {
	padding:10px 15px;
}

div#contents table tr td.remove {
	width:45px;
	padding:0 8px 0 20px;
}

div#contents table tr td.remove a {
    color: #666666;
    display: block;
    font-size: 10px;
    font-weight: bold;
    line-height: 15px;
    padding: 2px 5px;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
	border:1px solid #999999;
	background:#ffffff;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

div#contents table tr td.remove a:hover {
    background: #F3F3F3;
    color: #000000;
    text-decoration: none;
	border:1px solid #333333;
}

div#contents table p.title {
	font-size:18px;
	font-weight:bold;
}

div#contents table p.desc {
	font-size:12px;
	color:#505050;
	padding:3px 0 0 0;
}

a.responder,
a.planner,
a.responderList {
	font-weight:bold;
	border:none;
}

a.responder:hover,
a.planner:hover,
a.responderList:hover {
	font-weight:bold;
	border-bottom:1px dotted #666666;
	color:#000000;
}

span.profile,
span.many {
	border-bottom:1px dotted #666666;
}


/* ----- Assign - Menu ----- */

div#contents table tr td.assign {
    border: 0 none;
    color: #8E8E8E;
    margin: 0;
    padding: 0;
	width:165px;
}

td.assign ul {
    height: 15px;
    list-style: none outside none;
    margin: 0;
    padding: 0;
}

td.assign li {
    float: left;
    padding: 0;
}

td.assign li a {
    color: #666666;
    display: block;
    font-size: 10px;
    font-weight: bold;
    line-height: 15px;
    padding: 2px 5px;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
	border:1px solid #999999;
	background:#ffffff;
	border-radius:5px;
}

td.assign li:hover a {
    background: #F3F3F3;
    color: #000000;
    text-decoration: none;
	border-bottom:none;
	border-radius:5px 5px 0 0;
}

td.assign li ul {
    background: #ffffff;
    display: none;
    height: auto;
    position: absolute;
    width: 150px;
    z-index: 200;
    border-bottom: 1px solid #999999;
}

td.assign li:hover ul {
    display: block;
}

td.assign li:hover {
    background: none repeat scroll 0 0 #F3F3F3;
    color: #000000;
}

td.assign li li {
    display: block;
    float: none;
    padding: 0;
    width: 150px;
}

td.assign li:hover ul a {
    display: block;
    font-style: normal;
    padding: 0 5px;
    text-align: left;
	width:140px;
	text-transform:none;
	border-bottom:none;
	border-radius:0;
}

td.assign li:hover ul a:hover {
    background: #ffffff;
    color: #333333;
	border-radius:0;
}

td.assign p {
    clear: left;
}

td.assign #current, td.assign li.active {
    background: none repeat scroll 0 0 #F3F3F3;
    color: #FFFFFF;
}

td.assign ul li ul li#current {
    background: none repeat scroll 0 0 #E0E0E0;
    color: #FFFFFF;
}

