            </testResource>
            <testResource>
                <filtering>false</filtering>
                <directory>src/main/webapp</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
        </testResources>
