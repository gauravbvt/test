<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.analystdb.data.DecisionFlow" table="decision_flow" dynamic-insert="false" dynamic-update="false">
        <composite-id name="id" class="com.analystdb.data.DecisionFlowId">
            <key-property name="decision" type="integer">
                <column name="decision"/>
            </key-property>
            <key-property name="flow" type="long">
                <column name="flow"/>
            </key-property>
        </composite-id>
        <many-to-one
            name="flow"
            class="com.analystdb.data.Flow"
            update="false"
            insert="false"
            fetch="select">
            <column name="flow" not-null="true"/>
        </many-to-one>
        <many-to-one
            name="decision"
            class="com.analystdb.data.Decision"
            update="false"
            insert="false"
            fetch="select">
            <column name="decision" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>