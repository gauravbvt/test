<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.analystdb.data.Decision" table="decision" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="string">
            <column name="name" length="63"/>
        </property>
        <property name="description" type="string">
            <column name="description" length="65535"/>
        </property>
        <property name="importance" type="byte">
            <column name="importance"/>
        </property>
        <many-to-one name="interview" class="com.analystdb.data.Interview">
            <column name="interview" not-null="true"/>
        </many-to-one>
        <set name="decisionFlows" inverse="true" cascade="">
            <key>
                <column name="decision" not-null="true"/>
            </key>
            <one-to-many class="com.analystdb.data.DecisionFlow"/>
        </set>
    </class>
</hibernate-mapping>