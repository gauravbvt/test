<testlist  title="Matcher Signer Unit Tests">
    <desc>
	<div>
	<b>Signer</b> accessor unit tests for the <b>Mind-Alliance Matcher</b> lib.
	</div>
    </desc>

    <!-- A few sanity checks to make sure yahoo/google don't change formats on us -->
    <test>
        <uri>yahoo-xhtml:unit%20testing</uri>
        <assert>
            <xpath>count(/:html/:body//:div[ @id='yschcat' ]//:a[ starts-with( @href, 'http://dir' ) ]) > 0</xpath>
        </assert>
        <assert>
            <xpath>
                count(/:html/:body//:div[ @class='yschdircat' ]//:a[1]) > 0 </xpath>
        </assert>
    </test>
