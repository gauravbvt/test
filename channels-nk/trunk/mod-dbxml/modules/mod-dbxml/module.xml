<?xml version="1.0" encoding="UTF-8"?>
<module>
    <identity>
		<uri>urn:org:ten60:netkernel:mod:dbxml</uri>
		<version>1.0.2</version>
    </identity>
	<info>
		<name>Berkeley DBXML Accessors and Utilities</name>
        <description>Services and Utilities for Berkeley DBXML</description>
    </info>
    <publisher>
        <name>1060 Research Limited</name>
		<uri>http://www.1060research.com</uri>
    </publisher>
    <licence>
		<name>1060 Public License v1.0</name>
		<uri>http://www.1060research.com/license</uri>
	</licence>
	<export>
		<uri>
			<match>active:dbxml((Put|Get|Delete)Document|(Create|Delete|Rename|Exists)Container|Query|BooleanQuery|GetIndices|AddIndex|DeleteIndex)\+.*</match>
			<match>ffcpl:/entrypoints.xml</match>
			<match>ffcpl:/org/ten60/dbxml/doc.*</match>
		</uri>
		<class>
			<match>org\.ten60\.dbxml\.representation\..*</match>
			<match>com\.sleepycat\..*</match>
		</class>
	</export>
	<rewrite>
		<rule>
			<match>ffcpl:(/org/ten60/dbxml/doc/.*xml)</match>
			<to>doc:$1</to>
		</rule>
	</rewrite>
	<mapping>
		<this>
			<match>ffcpl:/(org/ten60/dbxml/doc/|entrypoints.xml).*</match>
		</this>
		<ura>
			<match>active:dbxml((Put|Get|Delete)Document|(Create|Delete|Rename|Exists)Container|Query|BooleanQuery|GetIndices|AddIndex|DeleteIndex)\+.*</match>
			<class>org.ten60.dbxml.accessor.DBXMLAccessorImpl</class>
		</ura>
		<!--
		<ura>
			<match>active:dbxmlTransactionWrapper\+.*</match>
			<class>org.ten60.dbxml.accessor.TransactionWrapperAccessor</class>
		</ura>
		-->
		<import>
			<uri>urn:org:ten60:netkernel:ext:xml:core</uri>
		</import>
		<import>
			<uri>urn:org:ten60:netkernel:ext:layer1</uri>
		</import>
		<rewrite>
			<match>doc:(/org/ten60/dbxml/doc.*)</match>
			<to>active:doc-generate+operand@ffcpl:$1</to>
		</rewrite>
		<import>
			<uri>urn:org:ten60:netkernel:mod:docxter</uri>
		</import>
		<super/>
    </mapping>
	<transreptors>
		<transreptor>org.ten60.dbxml.transreptor.DBXMLResultToXML</transreptor>
	</transreptors>
</module>
