import org.ten60.netkernel.layer1.representation.*;
import org.ten60.netkernel.xml.representation.*;
import com.ten60.netkernel.urii.aspect.*;

main() {

  req = context.createSubRequest("active:dbxmlExistsContainer");
  req.addArgument("operator", new StringAspect("<dbxml><name>mycontainer</name></dbxml>"));
  r=context.issueSubRequest(req);
  r=context.transrept(r, IAspectBoolean.class);

  if(r.isTrue()) {
  	// Delete the container from a previous run
  	req = context.createSubRequest("active:dbxmlDeleteContainer");
	req.addArgument("operator", new StringAspect("<dbxml><name>mycontainer</name></dbxml>"));
	r=context.issueSubRequest(req);
  }

  req = context.createSubRequest("active:dbxmlCreateContainer");
  req.addArgument("operator", new StringAspect("<dbxml><name>mycontainer</name></dbxml>"));
  r=context.issueSubRequest(req);

  response = context.createResponseFrom(new StringAspect("<success/>"));
  response.setMimeType("text/xml");
  context.setResponse(response);
}