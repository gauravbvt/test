<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="Mind-Alliance Channels Module">
    
    <target name="init">
        <property name="deploy.dir" value="deploy"/>
        <mkdir dir="${deploy.dir}"/>
    </target>
    
	<target description="Build everything." name="all" depends="init">
		<ant antfile="build-module.xml"/>
		<ant antfile="build-test-module.xml"/>
        <echo message="Mind-Alliance Channels Module build completed."/>
    </target>
    
    <target description="Clean up the derived objects" name="clean">
        <delete>
            <fileset dir="." includes="**/*.jar"/>
        </delete>
        <delete>
            <fileset dir="../modules/mod-channels/" includes="**/*.class"/>
        </delete>
    </target>
	

    
</project>
