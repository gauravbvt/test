<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="Channels Modules">

	<target name="init">
		<property environment="env"/>
		<property file="./version.properties"/>
		<echo message="Building: ${mod-channels-name} version ${mod-channels-version}"/>
		<property name="app" value="${mod-channels-name}"/>
		<property name="version" value="${mod-channels-version}"/>
		<property name="base" value=".."/>
		<property name="src" value="${base}/modules/mod-channels"/>
		<property name="dst" value="${src}"/>
		<property name="lib" value="${base}/lib"/>
		<property name="mod-channels-lib" value="${src}/lib"/>
		<property name="dist.dir" value="../../dist"/>
	</target>

    <target depends="init" name="compile">
        <javac debug="true" deprecation="true" destdir="${dst}" srcdir="${src}">
            <classpath>
				<fileset dir="${netkernel.home.dir}">
					<include name="lib/1060netkernel-2.8.3.jar"/>
					<include name="modules/ext-layer1-1.3.3.jar"/>
					<include name="modules/ext-xml-core-1.5.0.jar"/>
				</fileset>
            </classpath>
        </javac>
    </target>

    <target depends="init,compile" name="jar">
        <mkdir dir="${dist.dir}"/>

        <copy todir="${base}/modules/mod-channels/resources">
            <fileset dir="${dist.dir}/flex">
                <include name="**/*"/>
            </fileset>
        </copy>
        
        <jar basedir="${dst}" compress="true" destfile="${dist.dir}/${app}-${version}.jar">
		    <include name="**/*"/>
		    <exclude name="**/.nbattrs*"/>
		    <exclude name="**/.svn"/>
	        <exclude name="**/*.java"/>
        </jar>
    </target>

	<target depends="init,clean, build, jar" description="Build everything." name="all">
        <echo message="${app}  built."/>
    </target>

	<target depends="init,clean,compile" description="Build." name="build">
        <echo message="${app} built."/>
    </target>

    <target depends="init" description="Clean all build products." name="clean">
        <delete>
            <fileset dir="${dst}">
                <include name="**/*.class"/>
            </fileset>
        	<!-- This need cleaned up... -->
            <fileset dir="${base}/modules/mod-channels/resources">
                <include name="assets/**/*"/>
                <include name="*.js"/>
                <include name="*.swf"/>
                <include name="*.html"/>
            </fileset>
        </delete>
    	<delete dir="${base}/modules/mod-channels/resources/assets"/>
    </target>

</project>
