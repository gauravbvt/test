<?oxygen RNGSchema="../schemas/references.rnc" type="compact"?>
<references>
  <reference toElement="format">
    <from element="transmission" via=".//"/>
    <from element="format" via="./compatibleWith/"/>
  </reference>
  <reference toElement="category">
    <from group="model_element" via=".//"/> <!-- Any reference to a category anywhere is non-dependent -->
  </reference>
  <reference toGroup="event">
    <from element="transmission" via=".//updating/until/" in="until"/> <!-- the "in" is part of the reference -->
    <from element="transmission" via=".//notification/event/" isDependent="true"/>
    <from group="linkedEvent" via="./trigger/cause/" isDependent="true"/>
    <from group="linkedEvent" via="./terminator/cause/" isDependent="false"/>
    <from element="complexEvent" via="./(and|or|xor|not)/"/>
  </reference>
  <reference toElement="transmission">
    <from element="transmission" via=".//(notification|answer|update)/"/> 
  </reference>
  <reference toGroup="agent">
    <from element="transmission" via=".//taskRequest/forAgents/"/>
    <from group="task" isDependent="true"/> <!-- via defaults to "./" -->
    <from group="artifact"/>
    <from element="communication" via="./target/" in="target" isDependent="true"/>
    <from element="transmission" via="./faceToFaceWith/" isDependent="true"/>
    <from element="informationNeed" isDependent="true"/>
    <from element="knowledge" isDependent="true"/>
    <from element="requisite" isDependent="true"/>
    <from element="possession" isDependent="true"/>
    <from element="contactPoint" isDependent="true"/>
    <from element="relationship" via="./from" isDependent="true" in="from"/>
    <from element="relationship" via="./to" isDependent="true" in="to"/>
  </reference>
  <reference toElement="contactPoint">
    <from element="transmission" via=".//notificationRequest/"/>
    <from element="transmission" isDependent="true"/>
  </reference>
  <reference toElement="scenario">
    <from group="thing" isDependent="true" via="./scope/"/> 
    <from group="event" isDependent="true"/>
  </reference>
  <reference toGroup="entity">
    <from group="event" isDependent="true"/> <!-- event about an entity depends on the entity -->
    <from element="issue" isDependent="true"/>
  </reference>
  <reference toElement="organization">
    <from element="clearance" isDependent="true"/>
    <from element="organization" via="./parent/" in ="parent"/>
    <from element="contactPoint" isDependent="true"/>
    <from group="resource" isDependent="true"/>
    <from element="policy" isDependent="true"/>
  </reference>
  <reference toElement="mission">
    <from element="role"/>
    <from element="mission" via="./canFurther/"/>
    <from element="mission" via="./canOppose/"/>
  </reference>
  <reference toElement="channel">
    <from element="channel" via="./interoperatesWith/"/>
    <from element="transmission"  isDependent="true"/>
    <from element="contactPoint" isDependent="true"/>
  </reference>
  <reference toElement="issue">
    <from element="remediation" isDependent="true"/>
  </reference>
  <reference toElement="policy">
    <from element="regulatoryEvent" isDependent="true"/>
  </reference>
  <reference toElement="person">
    <from element="worker"/>
    <from element="participant"/>
    <from element="clearance" isDependent="true"/>
  </reference>
  <reference toElement="worker">
    <from element="team"/>
  </reference>
  <reference toGroup="resource">
    <from element="requisite" isDependent="true" via="./required/" in="required"/>
  </reference>
  <reference toGroup="artifact">
    <from element="possession" isDependent="true"/>
  </reference> 
  <reference toElement="role">
    <from group="agent"/>
    <from element="policy" via="./appliesTo/"/>
  </reference>
  <reference toElement="participant">
    <from element="question"/> 
    <from element="answerToQuestion"/> 
  </reference>
  <reference toElement="question">
    <from element="answerToQuestion" isDependent="true"/>
  </reference>
</references>