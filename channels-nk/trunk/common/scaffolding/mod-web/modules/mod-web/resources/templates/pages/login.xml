<html xmlns:xrl="http://1060.org/xrl">
  <head>
    <title>@template@ - LOGIN</title>
    <link rel="stylesheet" href="@template@.css" type="text/css" media="screen"/>
	  <script src="scripts/pages/login.js" type="text/javascript"/>
  </head>
  <body>
	  <div class="login">
    <form name="loginform" action="/@template@/public/action/login" method="POST">
      <input name="url" type="hidden"/>
      <label for="userid">User ID:</label>
      <input type="text" name="userid"/>
      <label for="password">Password:</label>
      <input name="password" type="password"/>
      <label for="project">Project:</label>
      <select name="project">
        <xrl:include href="xrl:projectOptions"/>
      </select>
      <input type="submit" value="Login" onclick="setURL()"/>
    </form>
    </div>
  </body>
</html>
