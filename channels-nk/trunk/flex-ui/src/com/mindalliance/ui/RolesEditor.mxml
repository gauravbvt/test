<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:mas="com.mindalliance.ui.*">
    
    <mx:VBox width="100%" height="100%">
        <mx:Form width="100%">
            <mx:FormItem label="Show">
                <mx:Grid width="100%" horizontalAlign="left">
                    <mx:RadioButtonGroup id="managerRolesViewOptionsGroup"/>
                    <mx:GridRow width="100%">
                        <mx:GridItem>
                            <mx:RadioButton label="My Roles" groupName="managerRolesViewOptionsGroup"/>
                        </mx:GridItem>
                        <mx:GridItem>
                            <mx:RadioButton label="Roles I Manage" groupName="managerRolesViewOptionsGroup"/>
                        </mx:GridItem>
                    </mx:GridRow>
                    <mx:GridRow>
                        <mx:GridItem>
                            <mx:RadioButton label="Both" groupName="managerRolesViewOptionsGroup"/>
                        </mx:GridItem>
                    </mx:GridRow>
                </mx:Grid>
            </mx:FormItem>
            <mx:FormItem label="Roles">
                <mas:MultiValueEditableList width="100%"/>
            </mx:FormItem>
        </mx:Form>    
    </mx:VBox>
    <mas:RoleEditor width="100%" height="100%"/>
</mx:HBox>