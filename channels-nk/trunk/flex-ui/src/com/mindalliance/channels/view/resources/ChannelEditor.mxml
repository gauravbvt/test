<?xml version="1.0" encoding="utf-8"?>
<mx:Form xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:common="com.mindalliance.channels.view.common.*"
    xmlns:categories="com.mindalliance.channels.view.categories.*">
    
    <mx:Style source="../../../../../assets/styles/FormStyles.css"/>
    
    <mx:ArrayCollection id="EncodingFormats">
        <mx:Object Supported="true" Format="Video"/>
        <mx:Object Supported="true" Format="Voice"/>
        <mx:Object Supported="true" Format="Images"/>
        <mx:Object Supported="true" Format="Electronic document"/>                        
    </mx:ArrayCollection>
    
    <mx:Component id="cbCustom">
        <mx:HBox horizontalAlign="center" verticalAlign="middle" width="100%" height="100%">
            <mx:CheckBox/>
        </mx:HBox>
    </mx:Component>
    
    <mx:FormHeading label="'Channel:' + {txtName.text}"/>
    
	<mx:FormItem label="Name">
	    <mx:TextInput id="txtName"/>
	</mx:FormItem>
	<mx:FormItem label="Description">
	    <mx:TextArea id="txtDescription"/>
	</mx:FormItem>
	<mx:FormItem label="Encoding Formats" direction="vertical">
		<mx:List/>
		<mx:HBox>
			<common:AddButton/>
			<common:RemoveButton/>
		</mx:HBox>
	</mx:FormItem>
	<mx:FormItem label="Interoperates with" direction="vertical">
	        <mx:List/>
	        <mx:HBox>
	        	<common:AddButton/>
	        	<common:RemoveButton/>
	        </mx:HBox>
	</mx:FormItem>
	<mx:FormItem label="Security" direction="vertical">
		<mx:Text styleName="FormItemDescription" text="Specify level of confidence"/>
	    <mx:HSlider/>
	</mx:FormItem>
	<mx:FormItem label="Privacy">
		<mx:Text styleName="FormItemDescription" text="Specify level of confidence"/>
	    <mx:HSlider/>
	</mx:FormItem>
	<mx:FormItem label="Latency" direction="vertical">
		<mx:Text styleName="FormItemDescription" text="Estimate time required to send information through this channel"/>
		<mx:HBox>
			<mx:Label text="About"/><mx:TextInput/><common:TimeScalesComponent/>
		</mx:HBox>
	</mx:FormItem>
	<categories:CategoryViewer/>
</mx:Form>