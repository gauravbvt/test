<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" verticalAlign="middle" horizontalAlign="left" xmlns:search="com.mindalliance.channels.view.search.*">

	<mx:Script>
	
		<![CDATA[
            public var change : Function;
            public var text : String;
			private function clearSearchText():void {
				txtSearch.text = '' ;
				changeFunction();
			}
			
			private function changeFunction() : void {
			     text = txtSearch.text;
			     if (change != null) {
			         change();	
			     }
			}
			
		]]>
	</mx:Script>

	<mx:Label text="Search:"/>
	<mx:TextInput id="txtSearch" width="100%" change="changeFunction()"/>
	<search:ClearSearchButton id="btnClearSearch" click="clearSearchText()" enabled="{txtSearch.text.length > 0}"/>

</mx:HBox>
