<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	
	<mx:VBox width="100%" height="100%">
		<mx:HBox width="100%" height="100%">
			<mx:Image source="assets/images/bell.png" scaleContent="true"/>
			<mx:Spacer width="100%"/>
			<mx:Label text="{data.taskName}"/>
		</mx:HBox>
		<mx:Spacer height="100%"/>
		<mx:Image source="assets/images/incoming.png"/>
		<mx:Spacer height="100%"/>
		<mx:HBox width="100%" height="100%">
			<mx:Label text="{data.rowNumber}"/>
			<mx:Spacer width="100%"/>
			<mx:CheckBox label="Success?" selected="{data.success}"/>
		</mx:HBox>
	</mx:VBox>
	
</mx:Box>
