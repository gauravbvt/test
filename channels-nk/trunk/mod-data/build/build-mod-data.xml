<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="Data Modules">

	<target name="init">
		<property environment="env"/>
		<property file="./version.properties"/>
		<echo message="Building: ${mod-data-name} version ${mod-data-version}"/>
		<property name="app" value="${mod-data-name}"/>
		<property name="version" value="${mod-data-version}"/>
		<property name="base" value=".."/>
		<property name="src" value="${base}/modules/mod-data"/>
		<property name="dst" value="${src}"/>
		<property name="lib" value="${base}/lib"/>
		<property name="mod-data-lib" value="${src}/lib"/>
		<property name="dist.dir" value="../../dist"/>
    <property name="project.dir" value="../.."/>
	</target>

    <target depends="init" name="compile">
        <javac debug="true" deprecation="true" destdir="${dst}" srcdir="${src}">
            <classpath>
				<fileset dir="${netkernel.home.dir}">
          <!-- NK 3.2
					<include name="lib/1060netkernel-2.8.3.jar"/>
					<include name="modules/ext-layer1-1.3.3.jar"/>
					<include name="modules/ext-xml-core-1.5.0.jar"/>
            -->
          <!-- NK 3.3a -->
					<include name="lib/1060netkernel-2.8.4.jar"/>
					<include name="modules/ext-layer1-1.3.3.jar"/>
					<include name="modules/ext-xml-core-1.5.1.jar"/>
					<include name="modules/ext-kernel-1.0.8.jar"/>
				</fileset>
            </classpath>
        </javac>
    </target>

    <target depends="init,compile" name="jar"> 
        <mkdir dir="${dist.dir}"/>
        <jar basedir="${dst}" compress="true" destfile="${dist.dir}/${app}-${version}.jar">
			    <include name="**/*"/>
			    <exclude name="**/.nbattrs*"/>
			    <exclude name="**/.svn"/>
		      <exclude name="**/*.java"/>
          <exclude name="config/**"/>
        </jar>
    </target>
  
  <target depends="init" description="Apply filters" name="filter">
    <filter filtersFile="${project.dir}/deploy.properties"/>
    <copy todir="${dst}" filtering="true" overwrite="true">
	      <fileset dir="${src}/tofilter"/>
     </copy>
  </target>

	<target depends="init,clean, filter, build, jar" description="Build everything." name="all">
        <echo message="${app}  built."/>
    </target>

	<target depends="init,clean,compile" description="Build." name="build">
        <echo message="${app} built."/>
    </target>

    <target depends="init" description="Clean all build products." name="clean">
        <delete>
            <fileset dir="${dst}">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${dst}">
                <include name="resources/schemas/*.rng"/>
                <include name="libs/utils.js"/>
            	<include name="etc/dbxml_config.xml"/>
            </fileset>
        </delete>
    </target>

</project>
