<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <!--
    taxonomy =
      attribute taxonomy {"acquirement" | "artifact" | "format" | "organization" | "role" | "task" | 
      "event" | "discipline"| "location" | "policy" | "repository"} # more taxonomy names to come

  -->
  <define name="taxonomy">
    <attribute name="taxonomy">
      <choice>
        <value>acquirement</value>
        <value>artifact</value>
        <value>format</value>
        <value>organization</value>
        <value>role</value>
        <value>task</value>
        <value>event</value>
        <value>discipline</value>
        <value>location</value>
        <value>policy</value>
        <value>repository</value>
      </choice>
    </attribute>
  </define>
</grammar>