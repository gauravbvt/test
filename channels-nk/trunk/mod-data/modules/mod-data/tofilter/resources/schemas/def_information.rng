<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <!--
    information = 
      element information {
        element topic {
          {identified} &
          element confidence {
            {level}
          }? &
          element privacy {
            element roleId {text}*
          }? &
          element eoi {
            {identified}
          }*
        }*
      }
  -->

    <define name="information">
    <element name="information">
      <zeroOrMore>
        <element name="topic">
          <interleave>
            <ref name="identified"/>
            <optional>
              <element name="confidence">
                <ref name="level"/>
              </element>
            </optional>
            <optional>
              <element name="privacy">
                <zeroOrMore>
                  <element name="roleId"><text/></element>
                </zeroOrMore>
              </element>
            </optional>
            <zeroOrMore>
              <element name="eoi">
                <ref name="identified"/>
              </element>
            </zeroOrMore>
          </interleave>
        </element>
      </zeroOrMore>
    </element>
  </define>
</grammar>