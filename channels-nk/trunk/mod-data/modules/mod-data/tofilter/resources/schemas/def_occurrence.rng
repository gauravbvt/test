<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <!--
    occurrence = 
      element where {
        locationId {text} | 
        {address} | 
        {latLong}
      }? &
      {cause}?
  -->
  <define name="occurrence">
      <interleave>
        <optional>
          <element name="where">
            <choice>
              <element name="locationId"><text/></element>
              <ref name="address"/>
              <ref name="latlong"/>
            </choice>
          </element>
        </optional>
        <optional>
          <ref name="cause"/>
        </optional>
      </interleave>
  </define>
</grammar>