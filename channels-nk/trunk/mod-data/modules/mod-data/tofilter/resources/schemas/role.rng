<grammar xmlns="http://relaxng.org/ns/structure/1.0">
  <!--
  include href="http://@host@:@port@/channels/schema/ext_attrs.rnc"
  include href="http://@host@:@port@/channels/schema/ext_attrs.rnc"
  
  start =
      element organizaion {
  	    {attrs},
  	    {elems} & 
        element expertise {text}? &
        element organizationId {text} &
      }
  -->
  <include href="http://@host@:@port@/channels/schema/ext_attrs.rng"/>
  <include href="http://@host@:@port@/channels/schema/ext_elems.rng"/>
  <include href="http://@host@:@port@/channels/schema/ext_address.rng"/>
  
  <start>
    <element name="role">
      <ref name="attrs"/>
      <interleave>
        <ref name="elems"/>
        <element name="organizationId"><text/></element>
        <optional>
          <element name="expertise"><text/></element>
        </optional>
      </interleave>
    </element>
  </start>
  
</grammar>