            <stm:replace xpath="./projectId">
                <stm:param xpath="./id"/>
            </stm:replace>
            <stm:rename xpath="./id">
                projectId
            </stm:rename>
         </stm:group>
       </operator>
       <target>var:scenario</target>
    </instr>
    <instr>
      <type>channels_data_createElement</type>
