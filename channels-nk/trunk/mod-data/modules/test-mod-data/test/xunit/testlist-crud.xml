<?xml version="1.0" encoding="UTF-8"?>
<testlist title="mod-data tests">
	<desc>
		<div>
		<b>mod-data</b> CRUD unit tests for <b>Mind-Alliance Channels</b> lib.
		</div>
	</desc>
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testOpenModel.idoc</uri>
    <assert name="Opening container returns true">
      <uri>active:javascript+operator@ffcpl:/test/isTrue.js</uri> 
    </assert>
    <assert name="No caching">
      <expired/>
    </assert>
  </test>
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testCreateElement.idoc</uri>
    <assert name="Element created with id and schema attributes">
      <xpath>self::node()[@schema]/id</xpath>
    </assert>
  </test>
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testGetElement.idoc</uri>
    <assert name="Got element with an id">
      <xpath>./id</xpath>
    </assert>
  </test>
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testGetElementNamingListedRefs.idoc</uri>
    <assert name="Got element with named references">
     <xpath>./id</xpath>
     <!-- <xpath>count(.//*[./id and ./name]) = 2</xpath> -->
    </assert>
  </test> 
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testDeleteElement.idoc</uri>
    <assert name="Deleted element">
      <exception>Element not found</exception> 
    </assert>
  </test>
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testUpdateElement.idoc</uri>
    <assert name="Updated element">
      <uri>active:javascript+operator@ffcpl:/test/isTrue.js</uri> 
    </assert>
  </test>
  <test>
    <uri>active:dpml+operand@ffcpl:/test/testQueryModel.idoc</uri>
    <assert name="Query returned a least one result">
      <xpath>./*[1]</xpath>
    </assert>
  </test>
</testlist>
