<idoc>
  <comment>Create an element and delete it using its id</comment>
  <seq>
    <instr>
      <type>model:createElement</type>
      <doc>
        <project>
          <name>My project</name>
        </project>
      </doc>
      <kind>model:text/plain,project</kind>
      <target>var:element</target>
    </instr>
    <instr>
      <type>copy</type>
      <operand>var:element#xpointer(./id[1])</operand>
      <target>var:id</target>
    </instr>
    <instr>
      <type>model:deleteElement</type>
      <id>var:id</id>
      <target>this:response</target>
     </instr>
  </seq>
</idoc>
