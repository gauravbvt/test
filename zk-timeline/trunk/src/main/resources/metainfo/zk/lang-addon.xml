<language-addon>
	<!-- The name of this addon. It must be unique -->
	<addon-name>timeline</addon-name>
	<!-- Specifies what other addon this depends
		<depends></depends>
	-->

	<!-- Which language this addon will be added to -->
	<language-name>xul/html</language-name>

	<version>
		<version-class>org.zkforge.timeline.Version</version-class>
		<version-uid>1.1-1</version-uid>
	</version>

	<!-- [Optional, Multiple] Define a JavaScript module.
		Change the version if JS files are modified, such that
		browsers will reload them. 	-->
	<javascript-module name="timelinez.timeline" version="1.1-1" />

	<!-- The higher the number, the earlier this addon is loaded.
		Default: 0
		<priority>0</priority>
	-->

	<zscript>import org.zkforge.timeline.*;</zscript>

	<component>
		<component-name>timeline</component-name>
		<component-class>org.zkforge.timeline.Timeline</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./timeline/timeline.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>bandinfo</component-name>
		<component-class>org.zkforge.timeline.Bandinfo</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./timeline/bandinfo.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>hotzone</component-name>
		<component-class>org.zkforge.timeline.Hotzone</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./timeline/hotzone.dsp</mold-uri>
		</mold>
	</component>
</language-addon>
